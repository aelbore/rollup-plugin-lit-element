{
  "compilerOptions": {
    "baseUrl": ".",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "outDir": "dist",
    "target": "es2015",
    "module": "es2020",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "lib": [
      "ES2019",
      "DOM"
    ],
    "paths": {
      "/@/*": [ "./examples/hello-world/*" ],
      "@/plugin": [ "./src/index.ts" ],
      "css": [ "./packages/css/index.ts" ],
      "decorators": [ "./packages/decorators/index.ts" ],
      "decorators/*": [ "./packages/decorators/*" ],
      "shared": [ "./packages/shared/index.ts" ],
      "styles": [ "./packages/styles/index.ts" ]
    }
  }
}